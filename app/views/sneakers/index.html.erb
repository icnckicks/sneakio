<h1>Sneakers</h1>

<div class="d-flex justify-content-around">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Total Items in Stock</h5>
      <p class="card-text"><%= Sneaker.total_items_in_stock %></p>
    </div>
  </div>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Total Inventory Value</h5>
      <p class="card-text"><%= number_to_currency(Sneaker.total_inventory_value) %></p>
    </div>
  </div>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Total Items Sold</h5>
      <p class="card-text"><%= Sneaker.total_item_sold %></p>
    </div>
  </div>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Total Sales</h5>
      <p class="card-text"><%= number_to_currency(Sneaker.total_sales) %></p>
    </div>
  </div>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Total Profit</h5>
      <p class="card-text"><%= number_to_currency(Sneaker.total_profit) %></p>
    </div>
  </div>
</div>

<div class="table-responsive mt-4">
<table class="table table-striped table-hover" id="myTable">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Brand</th>
      <th scope="col">Name</th>
      <th scope="col">SKU</th>
      <!--<th scope="col">Colorway</th>-->
      <th scope="col">Size</th>
      <!--<th scope="col">Quantity</th>-->
      <!-- <th scope="col">Source</th> -->
      <th scope="col">Purchase Price</th>
      <!-- <th scope="col">Purchase Date</th> -->
      <!-- <th scope="col">Final Return Date</th> -->
      <th scope="col">Days in Inventory</th>
      <th scope="col">Sale Price</th>
      <th scope="col">ROI</th>
      <th scope="col">Profit</th>
      <th scope="col">Sold/In Stock</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @sneakers.each do |sneaker| %>
    <tr>
      <td><%= sneaker.id %></td>
      <td><%= sneaker.brand %></td>
      <td><strong><%= link_to sneaker.name, sneaker_path(sneaker) %></strong></td>
      <td><%= sneaker.sku %></td>
      <!--<td><small><%= sneaker.colorway %></small></td>-->
      <td><%= sneaker.size %> <%= sneaker.size_category %></td>
      <!--<td><%= sneaker.quantity %></td>-->
      <!-- <td><%= sneaker.source %></td> -->
      <td><%= number_to_currency(sneaker.purchase_price) %></td>
      <!--<td><%= sneaker.purchase_date %></td>-->
      <!-- <td><%= sneaker.final_return_date %></td> -->
      <td><%= sneaker.days_in_inventory %></td>
      <td><%= sneaker.sale_price %></td>
      <td><%= number_to_percentage(sneaker.roi, precision: 2) %></td>
      <td><%= number_to_currency(sneaker.profit) %></td>
      <td>
        <% if sneaker.sold %>
        Sold
        <% else %>
        In Stock
        <% end %>
      </td>
      <td>
        <%= link_to edit_sneaker_path(sneaker) do %>
        <i class="bi bi-pencil-square"></i>
        <% end %>
        <%= link_to duplicate_sneaker_path(sneaker) do %>
        <i class="bi bi-files"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
