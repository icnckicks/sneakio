<h1>Sneakers</h1>

<div class="row g-4">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Total Items in Stock</h5>
        <p class="card-text"><%= Sneaker.total_items_in_stock %></p>
      </div>
    </div>
  </div>

  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Total Inventory Value</h5>
        <p class="card-text"><%= number_to_currency(Sneaker.total_inventory_value) %></p>
      </div>
    </div>
  </div>

  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Total Spend</h5>
        <p class="card-text"><%= number_to_currency(Sneaker.total_spend) %></p>
      </div>
    </div>
  </div>
</div>

<div class="table-responsive mt-4">
  <table class="table table-striped table-hover no-wrap" id="myTable">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">SKU</th>
        <th scope="col">Colorway</th>
        <th scope="col">Size</th>
        <th scope="col">Box</th>
        <th scope="col">Source</th>
        <th scope="col">Purchase Price</th>
        <th scope="col">Purchase Date</th>
        <th scope="col">Age</th>
        <th scope="col">Final Return Date</th>
        <th scope="col">Availability</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @sneakers.each do |sneaker| %>
        <tr>
          <td><strong><%= link_to sneaker.brand, sneaker_path(sneaker) %> <%= link_to sneaker.name, sneaker_path(sneaker) %></strong></td>
          <td><%= sneaker.sku %></td>
          <td><small><%= sneaker.colorway %></small></td>
          <td><%= sneaker.size %> <%= sneaker.size_category %></td>
          <td><%= sneaker.box %></td>
          <td><%= sneaker.source %></td>
          <td><%= number_to_currency(sneaker.purchase_price) %></td>
          <td><%= sneaker.purchase_date.strftime('%m/%d/%y') %></td>
          <td><%= sneaker.days_in_inventory %> days</td>
          <td><%= sneaker.final_return_date.strftime('%m/%d/%y') %></td>
          <td>
            <% if sneaker.sold %>
              Sold
            <% else %>
              In Stock
            <% end %>
          </td>
          <td>
            <%= link_to edit_sneaker_path(sneaker), class: 'btn btn-sm btn-warning' do %>
              <i class="bi bi-pencil-square"></i>
            <% end %>

            <%= link_to duplicate_sneaker_path(sneaker), method: :post, class: 'btn btn-sm btn-info' do %>
              <i class="bi bi-files"></i>
            <% end %>
            
            <% if sneaker.tracking_number.present? %>
              <%= link_to tracking_url(sneaker), target: '_blank', class: 'btn btn-sm btn-primary' do %>
                <i class="bi bi-truck"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
